---
import Layout from '../layouts/Layout.astro';
import '@/styles/globals.css'
import Header from '../components/sections/Header.astro'
import Nav from "../components/sections/Nav"
import Aboutme from '@/components/sections/Aboutme.astro';
import Experiencia from '@/components/sections/Experiencia.astro';
import Education from '@/components/sections/Education.astro'
import Footer from '@/components/sections/Footer.astro';
---

<Layout>
    <main class="md:container w-full min-h-screen h-full px-3">
        <Nav client:only/>
        <Header/>
        <section class="p-5 min-h-[90vh] flex flex-col gap-5 justify-center md:mt-0 mt-20">
            <Experiencia/>
            <Education/>
        </section>
        <Aboutme/>
        <Footer/>
    </main>
</Layout>